{
  "策略版本": "1.0",
  "更新日期": "2025-01-03",
  "趋势型策略": {
    "均线多头排列": {
      "描述": "短期均线在上，长期均线在下，形成多头排列，表明上升趋势",
      "适用场景": "牛市、趋势明确的市场",
      "风险等级": "中",
      "参数": {
        "ma_short_1": {
          "类型": "slider",
          "标签": "MA短期1",
          "默认值": 5,
          "最小值": 3,
          "最大值": 30,
          "说明": "短期均线周期1"
        },
        "ma_short_2": {
          "类型": "slider",
          "标签": "MA短期2",
          "默认值": 10,
          "最小值": 5,
          "最大值": 60,
          "说明": "短期均线周期2"
        },
        "ma_short_3": {
          "类型": "slider",
          "标签": "MA短期3",
          "默认值": 20,
          "最小值": 10,
          "最大值": 120,
          "说明": "短期均线周期3"
        },
        "ma_long_1": {
          "类型": "slider",
          "标签": "MA长期1",
          "默认值": 60,
          "最小值": 20,
          "最大值": 250,
          "说明": "长期均线周期1"
        },
        "ma_long_2": {
          "类型": "slider",
          "标签": "MA长期2",
          "默认值": 120,
          "最小值": 60,
          "最大值": 500,
          "说明": "长期均线周期2"
        },
        "price_above_ma": {
          "类型": "checkbox",
          "标签": "收盘价高于短期均线",
          "默认值": true,
          "说明": "当前收盘价要高于最短期均线"
        }
      },
      "SQL条件": "ma_short_1 > ma_short_2 AND ma_short_2 > ma_short_3 AND ma_short_3 > ma_long_1 AND ma_long_1 > ma_long_2"
    },
    "MACD金叉": {
      "描述": "DIF线上穿DEA线，形成金叉，是买入信号",
      "适用场景": "趋势启动期",
      "风险等级": "中",
      "参数": {
        "fast_period": {
          "类型": "slider",
          "标签": "快线周期",
          "默认值": 12,
          "最小值": 5,
          "最大值": 30,
          "说明": "EMA快线周期"
        },
        "slow_period": {
          "类型": "slider",
          "标签": "慢线周期",
          "默认值": 26,
          "最小值": 10,
          "最大值": 50,
          "说明": "EMA慢线周期"
        },
        "signal_period": {
          "类型": "slider",
          "标签": "信号线周期",
          "默认值": 9,
          "最小值": 5,
          "最大值": 20,
          "说明": "DEA线周期"
        },
        "dif_above_zero": {
          "类型": "checkbox",
          "标签": "DIF在零轴上方",
          "默认值": true,
          "说明": "DIF线在零轴上方更强势"
        }
      },
      "SQL条件": "dif > dea AND (dif - dea) > 0 AND dif > 0"
    },
    "回踩均线": {
      "描述": "股价回踩均线不破，均线支撑有效，是买入机会",
      "适用场景": "上升趋势中的回调",
      "风险等级": "低",
      "参数": {
        "ma_period": {
          "类型": "slider",
          "标签": "均线周期",
          "默认值": 20,
          "最小值": 5,
          "最大值": 60,
          "说明": "支撑均线周期"
        },
        "drop_ratio": {
          "类型": "slider",
          "标签": "回踩比例(%)",
          "默认值": 2.0,
          "最小值": 0.5,
          "最大值": 5.0,
          "说明": "允许回踩均线的比例"
        },
        "volume_confirm": {
          "类型": "checkbox",
          "标签": "需要成交量配合",
          "默认值": true,
          "说明": "回踩时成交量萎缩"
        }
      },
      "SQL条件": "close >= ma_period * (1 - drop_ratio/100) AND close < ma_period"
    },
    "趋势跟踪": {
      "描述": "综合多个趋势指标，确认趋势后跟踪",
      "适用场景": "明确的趋势市场",
      "风险等级": "低",
      "参数": {
        "ma_trend": {
          "类型": "checkbox",
          "标签": "MA趋势向上",
          "默认值": true,
          "说明": "均线多头排列"
        },
        "macd_confirm": {
          "类型": "checkbox",
          "标签": "MACD确认",
          "默认值": true,
          "说明": "MACD金叉"
        },
        "volume_confirm": {
          "类型": "checkbox",
          "标签": "成交量放大",
          "默认值": true,
          "说明": "成交量大于均线"
        },
        "price_rise": {
          "类型": "checkbox",
          "标签": "股价上涨",
          "默认值": true,
          "说明": "最近N日收阳"
        }
      },
      "SQL条件": "ma5 > ma20 AND dif > dea AND volume > vma5 AND change_pct > 0"
    }
  },
  "突破型策略": {
    "箱体突破": {
      "描述": "股价突破横盘箱体上沿，放量确认，可能是新趋势开始",
      "适用场景": "横盘整理后突破",
      "风险等级": "高",
      "参数": {
        "lookback_days": {
          "类型": "slider",
          "标签": "回溯天数",
          "默认值": 20,
          "最小值": 10,
          "最大值": 60,
          "说明": "箱体形成天数"
        },
        "breakout_ratio": {
          "类型": "slider",
          "标签": "突破比例(%)",
          "默认值": 2.0,
          "最小值": 0.5,
          "最大值": 5.0,
          "说明": "突破箱体上沿的比例"
        },
        "volume_ratio": {
          "类型": "slider",
          "标签": "放量倍数",
          "默认值": 1.5,
          "最小值": 1.0,
          "最大值": 3.0,
          "说明": "成交量大于均线的倍数"
        }
      },
      "SQL条件": "close > max_high * (1 + breakout_ratio/100) AND volume > vma5 * volume_ratio"
    },
    "放量突破": {
      "描述": "成交量显著放大，股价上涨突破，资金介入信号",
      "适用场景": "震荡市",
      "风险等级": "中",
      "参数": {
        "volume_ratio": {
          "类型": "slider",
          "标签": "放量倍数",
          "默认值": 2.0,
          "最小值": 1.5,
          "最大值": 5.0,
          "说明": "成交量大于均线的倍数"
        },
        "price_rise": {
          "类型": "slider",
          "标签": "涨幅(%)",
          "默认值": 3.0,
          "最小值": 1.0,
          "最大值": 10.0,
          "说明": "当日最小涨幅"
        },
        "limit_days": {
          "类型": "slider",
          "标签": "限制天数",
          "默认值": 5,
          "最小值": 3,
          "最大值": 20,
          "说明": "最近N天内突破"
        }
      },
      "SQL条件": "volume > vma5 * volume_ratio AND change_pct > price_rise"
    },
    "连续上涨": {
      "描述": "连续多日收阳线，显示强势特征",
      "适用场景": "强势股",
      "风险等级": "高",
      "参数": {
        "consecutive_days": {
          "类型": "slider",
          "标签": "连续天数",
          "默认值": 3,
          "最小值": 2,
          "最大值": 10,
          "说明": "连续上涨天数"
        },
        "min_rise": {
          "类型": "slider",
          "标签": "单日最小涨幅(%)",
          "默认值": 1.0,
          "最小值": 0.5,
          "最大值": 5.0,
          "说明": "每日最小涨幅"
        },
        "volume_increase": {
          "类型": "checkbox",
          "标签": "成交量递增",
          "默认值": false,
          "说明": "成交量逐日放大"
        }
      },
      "SQL条件": "consecutive_up_days >= consecutive_days AND change_pct > min_rise"
    },
    "布林带突破": {
      "描述": "股价突破布林带上轨，强势特征",
      "适用场景": "波动放大",
      "风险等级": "中",
      "参数": {
        "boll_period": {
          "类型": "slider",
          "标签": "BOLL周期",
          "默认值": 20,
          "最小值": 10,
          "最大值": 50,
          "说明": "布林带周期"
        },
        "boll_k": {
          "类型": "slider",
          "标签": "标准差倍数",
          "默认值": 2.0,
          "最小值": 1.0,
          "最大值": 3.0,
          "说明": "布林带标准差倍数"
        },
        "breakout_confirm": {
          "类型": "checkbox",
          "标签": "需要突破确认",
          "默认值": true,
          "说明": "收盘价高于上轨"
        }
      },
      "SQL条件": "close > boll_upper AND volume > vma5"
    },
    "缩量后放量": {
      "描述": "前期缩量整理，后突然放量拉升，主力启动信号",
      "适用场景": "底部启动",
      "风险等级": "中",
      "参数": {
        "shrink_days": {
          "类型": "slider",
          "标签": "缩量天数",
          "默认值": 5,
          "最小值": 3,
          "最大值": 10,
          "说明": "缩量整理天数"
        },
        "expand_ratio": {
          "类型": "slider",
          "标签": "放量倍数",
          "默认值": 2.0,
          "最小值": 1.5,
          "最大值": 5.0,
          "说明": "放量时量比"
        },
        "price_breakout": {
          "类型": "checkbox",
          "标签": "价格突破",
          "默认值": true,
          "说明": "放量同时突破短期均线"
        }
      },
      "SQL条件": "volume > vma5 * expand_ratio AND close > ma5"
    },
    "涨停板": {
      "描述": "当日涨停，显示极强势",
      "适用场景": "短线操作",
      "风险等级": "极高",
      "参数": {
        "limit_up_pct": {
          "类型": "slider",
          "标签": "涨停幅度(%)",
          "默认值": 9.9,
          "最小值": 5.0,
          "最大值": 20.0,
          "说明": "涨停幅度阈值"
        },
        "volume_confirm": {
          "类型": "checkbox",
          "标签": "需要放量",
          "默认值": true,
          "说明": "涨停时放量"
        },
        "first_limit": {
          "类型": "checkbox",
          "标签": "首次涨停",
          "默认值": true,
          "说明": "近期首次涨停"
        }
      },
      "SQL条件": "change_pct >= limit_up_pct AND volume > vma5"
    }
  },
  "震荡型策略": {
    "KDJ低位金叉": {
      "描述": "KDJ指标在超卖区金叉，反弹信号",
      "适用场景": "熊市、超卖反弹",
      "风险等级": "低",
      "参数": {
        "kdj_n": {
          "类型": "slider",
          "标签": "KDJ周期N",
          "默认值": 9,
          "最小值": 5,
          "最大值": 20,
          "说明": "KDJ计算周期"
        },
        "oversold_level": {
          "类型": "slider",
          "标签": "超卖阈值",
          "默认值": 20,
          "最小值": 10,
          "最大值": 30,
          "说明": "K值超卖阈值"
        },
        "golden_cross": {
          "类型": "checkbox",
          "标签": "K上穿D",
          "默认值": true,
          "说明": "K线向上穿越D线"
        }
      },
      "SQL条件": "k < oversold_level AND k > d AND j > k"
    },
    "KDJ任意金叉": {
      "描述": "KDJ指标金叉，不限位置",
      "适用场景": "震荡市",
      "风险等级": "中",
      "参数": {
        "kdj_n": {
          "类型": "slider",
          "标签": "KDJ周期N",
          "默认值": 9,
          "最小值": 5,
          "最大值": 20,
          "说明": "KDJ计算周期"
        },
        "kd_filter": {
          "类型": "checkbox",
          "标签": "过滤高位金叉",
          "默认值": true,
          "说明": "K值大于80不金叉"
        }
      },
      "SQL条件": "k > d AND (k < 80 OR NOT kd_filter)"
    },
    "RSI超卖": {
      "描述": "RSI指标超卖，可能反弹",
      "适用场景": "超卖反弹",
      "风险等级": "低",
      "参数": {
        "rsi_period": {
          "类型": "slider",
          "标签": "RSI周期",
          "默认值": 6,
          "最小值": 5,
          "最大值": 24,
          "说明": "RSI计算周期"
        },
        "oversold_level": {
          "类型": "slider",
          "标签": "超卖阈值",
          "默认值": 20,
          "最小值": 10,
          "最大值": 30,
          "说明": "RSI超卖阈值"
        },
        "recent_low": {
          "类型": "checkbox",
          "标签": "近期低点",
          "默认值": true,
          "说明": "RSI创近期新低"
        }
      },
      "SQL条件": "rsi6 < oversold_level"
    },
    "RSI低位": {
      "描述": "RSI指标处于低位",
      "适用场景": "震荡市低点",
      "风险等级": "低",
      "参数": {
        "rsi_period": {
          "类型": "slider",
          "标签": "RSI周期",
          "默认值": 6,
          "最小值": 5,
          "最大值": 24,
          "说明": "RSI计算周期"
        },
        "low_level": {
          "类型": "slider",
          "标签": "低位阈值",
          "默认值": 30,
          "最小值": 20,
          "最大值": 40,
          "说明": "RSI低位阈值"
        }
      },
      "SQL条件": "rsi6 < low_level"
    },
    "双超卖": {
      "描述": "KDJ和RSI同时超卖，信号更强",
      "适用场景": "极度超卖",
      "风险等级": "低",
      "参数": {
        "kdj_threshold": {
          "类型": "slider",
          "标签": "KDJ阈值",
          "默认值": 20,
          "最小值": 10,
          "最大值": 30,
          "说明": "K值超卖阈值"
        },
        "rsi_threshold": {
          "类型": "slider",
          "标签": "RSI阈值",
          "默认值": 20,
          "最小值": 10,
          "最大值": 30,
          "说明": "RSI超卖阈值"
        },
        "confirm_days": {
          "类型": "slider",
          "标签": "确认天数",
          "默认值": 2,
          "最小值": 1,
          "最大值": 5,
          "说明": "连续超卖天数"
        }
      },
      "SQL条件": "k < kdj_threshold AND rsi6 < rsi_threshold"
    },
    "布林带下轨": {
      "描述": "股价触及布林带下轨，可能反弹",
      "适用场景": "超卖反弹",
      "风险等级": "低",
      "参数": {
        "boll_period": {
          "类型": "slider",
          "标签": "BOLL周期",
          "默认值": 20,
          "最小值": 10,
          "最大值": 50,
          "说明": "布林带周期"
        },
        "touch_ratio": {
          "类型": "slider",
          "标签": "触及比例(%)",
          "默认值": 1.0,
          "最小值": 0.0,
          "最大值": 2.0,
          "说明": "收盘价距离下轨的比例"
        },
        "volume_shrink": {
          "类型": "checkbox",
          "标签": "成交量萎缩",
          "默认值": false,
          "说明": "触及下轨时成交量萎缩"
        }
      },
      "SQL条件": "close <= boll_lower * (1 + touch_ratio/100)"
    }
  }
}
